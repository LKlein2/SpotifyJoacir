<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:isScrollContainer="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/txtTopTracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Top tracks"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="355dp"
                android:layout_height="184dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="25px">

                <ImageView
                    android:id="@+id/imgTrack1"
                    android:layout_width="114dp"
                    android:layout_height="165dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars[10]" />

                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgTrack2"
                            android:layout_width="157dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/avatars[9]" />

                        <ImageView
                            android:id="@+id/imgTrack3"
                            android:layout_width="157dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/avatars[8]" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgTrack4"
                            android:layout_width="157dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/avatars[7]" />

                        <ImageView
                            android:id="@+id/imgTrack5"
                            android:layout_width="157dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/avatars[6]" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtTracks1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="1. Childish Gambino — 3005"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTracks2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="2. Billie Eilish — bad guy"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTracks3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="3. Childish Gambino — Redbone"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTracks4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="4. Queen — I'm Going Slightly Mad"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTracks5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="5. Tyler, the Creator — Earfquake"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTopArtists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="50px"
                android:text="Top artists"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="358dp"
                android:layout_height="181dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="25px">

                <ImageView
                    android:id="@+id/imgArtist1"
                    android:layout_width="114dp"
                    android:layout_height="165dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars[10]" />

                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgArtist2"
                            android:layout_width="157dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/avatars[5]" />

                        <ImageView
                            android:id="@+id/imgArtist3"
                            android:layout_width="157dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/avatars[4]" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgArtist4"
                            android:layout_width="157dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/avatars[2]" />

                        <ImageView
                            android:id="@+id/imgArtist5"
                            android:layout_width="157dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/avatars[3]" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtArtist1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="1. Childish Gambino"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtArtist2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="2. Queen"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtArtist3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="3. Billie Elish"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtArtist4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="4. Beyoncé"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtArtist5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:text="5. Duda Beat"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>